---
const { reports } = Astro.props;
console.log('Reports received:', reports); // Debug log
---

<div class="grid gap-4 sm:grid-cols-2 md:gap-8 xl:grid-cols-3">
  {reports && reports.length > 0 ? (
    reports.map((report) => (
      <div class="flex flex-col rounded-lg border p-4 md:p-6">
        <h3 class="mb-2 text-lg font-semibold md:text-xl">
          {report.data.title}
        </h3>
        <p class="mb-4 text-gray-500">
          {report.data.description}
        </p>
        <!--
        <div class="mt-2 text-sm text-gray-600">
          <span>{report.data.domainValue} â€¢ </span>
          <span>{report.data.status}</span>
        </div>
        -->
        <a 
          href={`/reports/${report.slug}`} 
          class="mt-auto font-bold text-blue-500 transition duration-100 hover:text-blue-600 active:text-blue-700">
          Read Report
        </a>
      </div>
    ))
  ) : (
    <div class="col-span-3 text-center py-20">
      <p class="text-gray-500">No reports found.</p>
    </div>
  )}
</div> 